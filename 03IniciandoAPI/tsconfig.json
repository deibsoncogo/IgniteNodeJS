{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "rootDir": "./",
    "baseUrl": "./src",
    "paths": {
      "@errors/*": ["errors/*"],
      "@middlewares/*": ["middlewares/*"],
      "@settings/*": ["settings/*"],
      "@shared/*": ["shared/*"],
      "@utils/*": ["utils/*"],
      "@accounts/*": ["modules/accounts/*"],
      "@cars/*": ["modules/cars/*"]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "strict": false
  }
}
